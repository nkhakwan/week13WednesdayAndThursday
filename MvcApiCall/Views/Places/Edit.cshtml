<h1>Edit Info:</h1>
<form action="/Places/Details/@(Model.PlaceId)" method="post">
  <label for="city">City's Name</label>
  <input id="city" name="city" type="text" value="@(Model.Name)">
  <label for="country">Country's Name</label>
  <input id="country" name="country" type="text" value="@(Model.Species)">
  <label for="rating">Ratings</label>
  <input id="rating" name="rating" type="number" value="@(Model.Age)">
  <label for="description">Description of the Place</label>
  <input id="description" name="description" type="text" value="@(Model.Gender)">
  <label for="imageUrl">SnapShot URL of the place</label>
  <input id="imageUrl" name="imageUrl" type="text" value="@(Model.Gender)">
  <button type="submit">Go!</button>
</form>

<a href="/Places/Details/@(Model.PlaceId)"><p>Return to Details</p></a>